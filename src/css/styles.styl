desktop = "screen and (min-width: 1180px)"

@font-face
	font-family 'Schnebel', sans-serif
	font-style normal
	font-weight 800
	font-display swap
	src local('Schnebel Sans'),
			url('/wp-content/themes/iw_zovgor/font/schnebelSans.woff2') format('woff2'),
			url('/wp-content/themes/iw_zovgor/font/schnebelSans.woff') format('woff');

@font-face
	font-family 'Manrope', sans-serif
	font-style normal
	font-weight 400
	font-display swap
	src local('Manrope'),
			url('/wp-content/themes/iw_zovgor/font/manrope-v3-cyrillic-regular.woff2') format('woff2'),
			url('/wp-content/themes/iw_zovgor/font/manrope-v3-cyrillic-regular.woff') format('woff');


html
	scroll-behavior smooth
body
	margin 0
	padding 0
	font-size 18px
	font-family 'Manrope', sans-serif
	font-weight 400

a
	color inherit
	text-decoration none
	&:hover
		text-decoration underline

.container
	width 100%
	max-width 1180px
	margin auto
